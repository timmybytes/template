{
  "name": "template-project",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Timothy Merritt",
  "description": "A frontend template",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/"
  },
  "bugs": {
    "url": "https://github.com/"
  },
  "homepage": "https://timmybytes.com",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --config jest.config.js",
    "test:changed": "jest --config jest.config.js -o",
    "test:watch": "yarn test --watch",
    "make": "plop",
    "make-component": "plop Component _",
    "make-page": "plop Page _",
    "prepare": "husky install",
    "format": "prettier --write './{src,templates}/**/*'",
    "lint": "eslint '{src,templates}/**/*.{js,jsx,ts,tsx}'",
    "lint-fix": "yarn lint --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-react": "^7.16.7",
    "@chakra-ui/icons": "^1.0.14",
    "@chakra-ui/react": "^1.6.5",
    "@chakra-ui/system": "^1.0.0",
    "@emotion/css": "^11.5.0",
    "@emotion/react": "^11.5.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@fontsource/inter": "^4.5.0",
    "@fontsource/playfair-display": "^4.5.0",
    "framer-motion": "^4",
    "next": ">=11.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.2.0",
    "react-jss": "^10.7.1",
    "sass": "^1.36.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-typescript": "^7.16.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.1",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-macros": "^3.1.0",
    "tailwindcss": "^2.2.19",
    "twin.macro": "^2.8.1",
    "babel-jest": "^27.0.6",
    "eslint": "^7.31.0",
    "eslint-config-next": "^11.0.1",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.6",
    "lint-staged": ">=10",
    "plop": "^2.7.4",
    "prettier": "^2.3.2",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "**/*.(js|ts|tsx)": [
      "eslint --fix"
    ],
    "**/*.(js|json|ts|tsx)": [
      "prettier --write"
    ]
  }
}
